<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">
  <changeSet author="liquibase" id="1">
    <createTable tableName="fk_parent">
      <column name="id" type="INT">
        <constraints nullable="false" primaryKey="true" primaryKeyName="fk_parent_pkey"/>
      </column>
      <column name="name" type="VARCHAR(255)"/>
    </createTable>
    <createTable tableName="fk_child">
      <column name="id" type="INT">
        <constraints nullable="false" primaryKey="true" primaryKeyName="fk_child_pkey"/>
      </column>
      <column name="parent_id" type="INT"/>
    </createTable>
  </changeSet>
  <changeSet author="liquibase" id="2">
    <addForeignKeyConstraint baseColumnNames="parent_id" baseTableName="fk_child" constraintName="fk_child_parent" referencedColumnNames="id" referencedTableName="fk_parent"/>
  </changeSet>
</databaseChangeLog>