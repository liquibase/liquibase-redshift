<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">
    <changeSet id="1" author="claude">
        <createTable tableName="test_table">
            <column name="id" type="INT"/>
        </createTable>
        <rollback>
            <dropTable tableName="test_table"/>
        </rollback>
    </changeSet>
    <changeSet id="2" author="claude">
        <addColumn tableName="test_table">
            <column name="new_column" type="INT"/>
        </addColumn>
        <rollback>
            <dropColumn tableName="test_table" columnName="new_column"/>
        </rollback>
    </changeSet>
</databaseChangeLog>